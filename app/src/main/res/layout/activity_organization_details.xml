<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lambency.lambency_client.Activities.OrganizationDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/OrgImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_books"
                app:civ_border_color="@color/lightGray"
                app:civ_border_width="1dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/titleOrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organization Name"
                android:textColor="@android:color/black"
                android:textSize="29sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/descriptionOrg"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Org description goes here. We are a great organization. we do lots of great things. Please come to all of our meetings until the end of time ok thanks."
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                />

            <CheckBox
                android:id="@+id/followUnFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow/Unfollow"
                android:textAlignment="center"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/orgRequestJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Join Request"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleLayout"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_email_gray_24dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/emailOrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="leader@myorganization.com"
                    android:textAlignment="center"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_location_on_gray_24dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:id="@+id/addressOrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1275 Third Street, West Lafayette IN 47906"
                    android:textAlignment="center"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoLayout"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Events"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pictureOfEvent"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/ic_books" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameOfEvent"
                        android:layout_toRightOf="@+id/pictureOfEvent">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Event Name"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/descriptionOfEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nameOfEvent"
                        android:layout_toRightOf="@+id/pictureOfEvent"
                        android:text="Here is info about the event, you should come! It will be great! Come support your community!"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dateOfEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/pictureOfEvent"
                        android:layout_below="@id/descriptionOfEvent"

                        android:text="Date: 03/10/1998 "/>

                    <TextView
                        android:id="@+id/timeOfEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 3 - 5 pm"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:layout_below="@id/descriptionOfEvent"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>


    </RelativeLayout>
</ScrollView>